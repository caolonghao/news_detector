        <script type="text/javascript">
            var AO1 = $("#AO1 option:selected").text();
            var AO2 = $("#AO2 option:selected").text();
            
            document.getElementById('login').style.display = "none";
            document.getElementById('register').style.display = "none";
            function login() {
                document.getElementById('login').style.display = "";
                document.getElementsByClassName('caption-content')[0].style.display = "none";
            }
            function register() {
                document.getElementById('register').style.display = "";
                document.getElementsByClassName('caption-content')[0].style.display = "none";
            }
            function hiddeLogin() {
                document.getElementById('login').style.display = "none";
                document.getElementsByClassName('caption-content')[0].style.display = "";
            }
            function hidderegister() {
                document.getElementById('register').style.display = "none";
                document.getElementsByClassName('caption-content')[0].style.display = "";
            }

            $("#lo").click(function () {
                un = document.getElementsByName('username')[0].value
                pw = document.getElementsByName('password')[0].value
                console.log('un' + un)
                $.ajax({
                    url: '/login',
                    type: 'post',
                    data: {
                        username: un,
                        password: pw
                    },
                    success: function (str) {
                        if (str === '200') {
                            document.getElementById('logined').innerHTML = "欢迎您"+un
                            hiddeLogin()
                            alert('登录成功')
                        } else {
                            alert('密码有误')
                        }
                    },
                    error: function () {
                        alert('通信错误');
                    }
                })
            });

            $("#re").click(function () {
                print("Step into register!")
                un = document.getElementsByName('username')[1].value
                pw = document.getElementsByName('password')[1].value
                pw2 = document.getElementsByName('repassword')[0].value
                if (pw === pw2 && un != '') {
                    $.ajax({
                        url: '/register',
                        type: 'post',
                        data: {
                            username: un,
                            password: pw,
                            repassword: pw2
                        },
                        success: function (str) {
                            if (str === '200') {
                                alert('注册成功')
                                hidderegister()
                            } else {
                                alert('注册失败')
                            }
                        },
                        error: function () {
                            alert('通信错误');
                        }
                    })
                } else {
                    return
                }
            });
